{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noImplicitThis": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "importHelpers": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["frontend/**/*.ts", "frontend/**/*.tsx", "frontend/**/*.vue"],
  "exclude": ["node_modules"]
}
